<Window x:Class="FinalProject.Portal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalProject"
        mc:Ignorable="d"
        Title="Portal" Height="520" Width="800">
    <Grid Background="#FFC9DA19">
        <DataGrid x:Name="AccessGrid" HorizontalAlignment="Left" Height="325" Margin="30,50,0,0" VerticalAlignment="Top" Width="725" Background="#FFF3C90C"/>
        <Label Content="Buy Accessories &amp; Clothes You Need At More Affordable Price" HorizontalAlignment="Left" Margin="125,10,0,0" VerticalAlignment="Top" Width="580" Background="#FF11C119" Foreground="#FFCD1313" FontSize="18" FontFamily="Cooper Black"/>
        <Button Content="Buy/Proceed" HorizontalAlignment="Left" Margin="460,410,0,0" VerticalAlignment="Top" Width="155" Height="55" FontSize="16" Click="Buy_Product" Background="#FF3EC915" Foreground="#FFE8D9D9"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="170,410,0,0" VerticalAlignment="Top" Width="155" Height="55" Click="Cancel" FontSize="16" Foreground="#FFEED9D9" Background="#FFD60D0D"/>

    </Grid>
</Window>
